<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_dialog_rootview"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_container_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
    >

        <TextView
            android:id="@+id/tv_dialog_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="正在加载..."/>
        <com.aviconics.petrobot.petrobotbody.view.CustomVideoView
            android:id="@+id/vv_video_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_dialog_loading"
            android:layout_toEndOf="@+id/tv_dialog_loading"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_container_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/background"
            />

        <ImageView
            android:id="@+id/iv_disk"
            android:layout_width="562px"
            android:layout_height="563px"
            android:layout_marginLeft="331px"
            android:layout_marginTop="104px"
            android:src="@mipmap/disk"/>


        <ImageView
            android:id="@+id/iv_indicator"
            android:layout_width="83px"
            android:layout_height="526px"
            android:layout_marginLeft="876px"
            android:layout_marginTop="26px"
            android:rotation="18"
            android:src="@mipmap/indicator"
            android:transformPivotX="18px"
            android:transformPivotY="77px"/>

    </RelativeLayout>

</LinearLayout>